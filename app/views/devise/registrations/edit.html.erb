<div class="row">
  <div class="col-sm-offset-4 col-sm-8">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
  </div>
</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-horizontal', :role => 'form' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :username, :class => 'col-sm-4 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :username, :autofocus => true, :class => 'form-control' %>
    </div>
    <div class="col-sm-4"></div>
  </div>

  <div class="form-group">
    <%= f.label :email, :class => 'col-sm-4 control-label' %>
    <div class="col-sm-4">
      <%= f.email_field :email, :class => 'form-control' %>
    </div>
    <div class="col-sm-4"></div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password, :class => 'col-sm-4 control-label' %> 
    <div class="col-sm-4">
      <%= f.password_field :password, :autocomplete => "off", :class => 'form-control' %>
    </div>
    <div class="col-sm-4">
      <p style="padding-top: 6px;">(leave blank if you don't want to change it)</p>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, :class => 'col-sm-4 control-label' %>
    <div class="col-sm-4">
      <%= f.password_field :password_confirmation, :class => 'form-control' %>
    </div>
    <div class="col-sm-4"></div>
  </div>

  <div class="form-group has-error">
    <%= f.label :current_password, :class => 'col-sm-4 control-label' %>
    <!-- <i>(we need your current password to confirm your changes)</i> -->
    <div class="col-sm-4">
      <%= f.password_field :current_password, :class => 'form-control' %>
    </div>
    <div class="col-sm-4">
      <p style="padding-top: 8px; font-size: 13px;">(we need your current password to confirm your changes)</p>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-8">
      <%= f.submit "Update your details", :class => 'btn btn-primary' %> <%= link_to "Back", :back, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-sm-offset-4 col-sm-8">
    <h3>Cancel my account</h3>
      <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "WARNING: Are you sure you wish to delete your account? Any adventures you've created will be erased." }, :method => :delete, :class => 'btn btn-danger' %>
  </div>
</div>