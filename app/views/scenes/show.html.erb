<h2><%= @scene.title %></h2>
<%= image_tag @scene.image, :class => 'scene' %>
<p><%= @scene.first_visit %></p>
<p><%= @scene.description %></p>
<p><%= link_to 'Edit', edit_scene_path(@scene.id) %> | <%= link_to 'Delete', scene_path(@scene.id), :method => 'delete' %></p>

<% if @scene.end %>
  <p>You've reached the end of this adventure, play again?</p>
<!-- it's not the end so display the paths -->
<% else %>
  <h3>Paths</h3>
  <ul>
    <% @scene.paths.each do |path| %>
      <li><%= link_to path.description, scene_path(path.destination_id) %></li>
    <% end %>
  </ul>
<% end %>