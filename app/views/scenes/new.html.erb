<h2>Create a new scene</h2>

<p>This scene will be linked to "<%= @origin.title %>"</p>

<%= render 'errors' %>

<%= form_for @scene,{:url => "/scenes/#{@origin.id}", :html => {:class => "scene-form"}} do |f| %>
  <!-- Used to Populate the Path "Description" -->
  <div class="form-field">
    <%= label_tag 'Path Text' %>
    <%= text_field_tag 'path_desc' %>
  </div>
  <!-- Used to Populate the new Scene Object -->
  <div class="form-field">
    <%= f.label :title %>
    <%= f.text_field :title, :required => true %>
  </div>
  <div class="form-field">
    <%= f.label :first_visit %>
    <%= f.text_area :first_visit %>
  </div>
  <div class="form-field">
    <%= f.label :description %>
    <%= f.text_area :description, :required => true %>
  </div>
  <div class="form-field">
    <%= f.label :image %>
    <%= f.url_field :image %>
  </div>
  <div class="form-field">
    <%= f.label :multi_visit %>
    <%= f.check_box :multi_visit, :checked => true %>
  </div>
  <div class="form-field">
    <%= f.label :end %>
    <%= f.check_box :end %>
  </div>
  <%= f.submit %>
<% end %>