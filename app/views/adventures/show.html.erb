<h1 class='center'><%= @adventure.name %></h1>
<hr>

<div class='adv-info clearfix'>
  <%= image_tag @adventure.image, :class => 'adventure' %>
  <p class="big"><span class="heading">Created By:</span> <%= @adventure.user.username %></p>
  <p><span class="heading big">Description...</span><br> <%= @adventure.description %></p>
  <%= link_to scene_path(@adventure.start_scene_id), :class => "btn btn-success" do %>
    <span class="glyphicon glyphicon-play"></span> Play Adventure!
  <% end %>
  &nbsp; 
  <%= link_to adventures_path, :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-backward"></span> Back
  <% end %>
</div>

<!-- display editor options if user signed in and is the creator of this adventure -->
<% if user_signed_in? && current_user.id == @adventure.user_id %>
  <%= render 'editor_opt' %>
<% end %>